@{
    ViewData["Title"] = "Home Page";
}
@model IQueryable<Books>
<div class="text-center">
    <h1 class="display-4">Prof. Hilton's Favorite Books</h1>
    <table class="table table-dark">
        <thead class="table-bordered">
            <tr><th>Book Title</th><th>Author First Name</th><th>Author Middle Initial</th><th>Author Last Name</th><th>Publisher</th><th>ISBN</th><th>Classification</th><th>Category</th><th>Price</th></tr>
        </thead>

        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Title</td>
                    <td>@x.AuthorFirst</td>
                    <td>@x.AuthorMiddle</td>
                    <td>@x.AuthorLast</td>
                    <td>@x.Publisher</td>
                    <td>@x.ISBN</td>
                    <td>@x.Classification</td>
                    <td>@x.Category</td>
                    <td>$@x.Price</td>
                </tr>
            }

        </tbody>
    </table>
    <div asp-validation-summary="All"></div>
</div>

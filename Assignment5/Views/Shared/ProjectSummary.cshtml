@model Books
<div class="p-1 m-3 col-3">
    <div class="card card-text border-info ">
        <div class="p-1 m-1 text-xl-center">
            <h3>@Model.Title</h3>
            <h5 class="badge-dark p-1 m-1">By @Model.AuthorLast, @Model.AuthorFirst @Model.AuthorMiddle</h5>
            <p class="text-success">$@Model.Price</p>
        </div>

        <div class="text-info text-xl-center">
            <p>@Model.Classification/ @Model.Category</p>
            <p>@Model.PagesNum Pages</p>
            <p>Published By @Model.Publisher</p>
            <p>ISBN: @Model.ISBN</p>
            <form id="@Model.BookID" asp-page="/Shopping" method="post">
                <input type="hidden" asp-for="BookID" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <span class="card-text p-1">
                    @Model.Title
                    <button type="submit" class="btn-success btn-sm pull-right" style="float:right">Add to Cart</button>
                </span>
            </form>
        </div>
    </div>
    
</div>